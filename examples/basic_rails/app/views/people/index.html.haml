%h1 Welcome to the XapianDb Rails Demo

=form_tag people_path, :method => :get do
  ="Enter your query:"
  =text_field_tag :search, params[:search]
  =submit_tag "Search"

-if @page.size > 0
  %h2 Results
  %ul
  -@page.each do |doc|
    %li
      =link_to person_doc_as_string(doc), edit_person_path(doc.id)
  %p
  =will_paginate @result
